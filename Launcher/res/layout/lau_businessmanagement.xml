<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lau__wasu_background" >

    <TextView
        android:id="@+id/lau_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/sm_80"
        android:layout_marginTop="46dp"
        android:text="业务办理"
        android:textColor="#817F80"
        android:textSize="@dimen/sm_80" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lau_tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/sm_80"
        android:layout_marginRight="@dimen/sm_80"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/lau_gv_businessmanagement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="#00000000"
            android:numColumns="4" >
        </GridView>

        <TextView
            android:id="@+id/tv_un"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="暂无可订购的业务"
            android:textColor="#817F80"
            android:textSize="@dimen/sm_50" />
    </RelativeLayout>

</RelativeLayout>